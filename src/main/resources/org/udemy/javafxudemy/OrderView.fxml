<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="886.0" prefWidth="1467.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.udemy.javafxudemy.gui.controllers.OrderViewController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <!-- Título -->
    <Label text="Nova Ordem de Venda">
        <font>
            <Font name="Arial Bold" size="24" />
        </font>
    </Label>

    <!-- Conteúdo principal dividido em duas colunas -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">

        <!-- Coluna esquerda: Cliente -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label text="Buscar Cliente:" />
            <HBox spacing="10">
                <TextField fx:id="txtClientSearch" promptText="Digite o nome do cliente..." HBox.hgrow="ALWAYS" />
                <Button fx:id="btSearchClient" text="Procurar" onAction="#onBtSearchClientAction" />
            </HBox>
         <TableView fx:id="tableViewClient" onMouseClicked="#handleClientSelection" prefHeight="299.0" prefWidth="384.0">
           <columns>
             <TableColumn fx:id="tableColumnId" prefWidth="42.0" text="ID" />
             <TableColumn fx:id="tableColumnName" prefWidth="90.0" text="Name" />
               <TableColumn fx:id="tableColumnPhone" prefWidth="90.0" text="Phone" />
               <TableColumn fx:id="tableColumnEmail" prefWidth="61.0" text="Email" />
               <TableColumn fx:id="tableColumnAddress" prefWidth="90.0" text="Address" />
               <TableColumn fx:id="tableColumnCpf" prefWidth="90.0" text="CPF" />
           </columns>
         </TableView>

            <Separator />

            <Label text="Cliente Selecionado:" />
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="80" prefWidth="100" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="lblClientName" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="lblClientEmail" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Telefone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label fx:id="lblClientPhone" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>

        <!-- Coluna direita: Produtos + Pagamento -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label text="Adicionar Produtos:" />
            <HBox spacing="10">
                <ComboBox fx:id="cbProduct" promptText="Selecione um produto..." HBox.hgrow="ALWAYS" />
                <TextField fx:id="txtQuantity" maxWidth="60" promptText="Qtd" text="1" />
                <Button fx:id="btnAddProduct" text="Adicionar" />
            </HBox>

            <TableView fx:id="tableItems" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colProduct" prefWidth="200" resizable="true" text="Produto" />
                    <TableColumn fx:id="colQuantity" prefWidth="60" resizable="false" text="Qtd" />
                    <TableColumn fx:id="colUnitPrice" prefWidth="100" resizable="true" text="Preço Unit." />
                    <TableColumn fx:id="colTotal" prefWidth="100" resizable="true" text="Total" />
                    <TableColumn fx:id="colRemove" prefWidth="80" resizable="false" text="Remover" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <Separator />

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Método de Pagamento:" />
                <ComboBox fx:id="cbPaymentMethod" prefWidth="200" promptText="Selecione o método..." />
            </HBox>

            <HBox alignment="BOTTOM_RIGHT" spacing="20">
                <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                    <Label text="Total:" />
                    <Label fx:id="lblOrderTotal" text="R$ 0,00" />
                </HBox>
                <Button fx:id="btnFinishOrder" prefWidth="150" text="Finalizar Pedido" />
            </HBox>
        </VBox>
    </HBox>
</VBox>
